# Copy to .env (or use: docker compose --env-file compose.env.example ...)

POSTGRES_USER=relayfile
POSTGRES_PASSWORD=relayfile
POSTGRES_DB=relayfile
POSTGRES_PORT=5438

RELAYFILE_PORT=8080
RELAYFILE_JWT_SECRET=dev-secret
RELAYFILE_INTERNAL_HMAC_SECRET=dev-internal-secret

# Workspace and mount config used by mountsync container.
RELAYFILE_WORKSPACE=ws_live
RELAYFILE_REMOTE_PATH=/notion
RELAYFILE_MOUNT_INTERVAL=1s
RELAYFILE_MOUNT_TIMEOUT=15s
RELAYFILE_MOUNT_INTERVAL_JITTER=0.2

# Optional: override token if you want a different workspace/secret.
# RELAYFILE_TOKEN=

# Required for real Notion writeback calls.
# RELAYFILE_NOTION_TOKEN=secret_xxx
# RELAYFILE_NOTION_API_VERSION=2022-06-28
# RELAYFILE_NOTION_BASE_URL=https://api.notion.com
